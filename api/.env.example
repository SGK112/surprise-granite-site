# ===========================================
# SURPRISE GRANITE API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real keys!
# ===========================================

# Stripe API Keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Server Configuration
PORT=3001

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your_app_password_here
ADMIN_EMAIL=admin@yourdomain.com

# Replicate API (for AI Visualizer)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your_token_here

# RunPod API (backup AI service)
# Get from: https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=rpa_your_key_here
RUNPOD_FLUX_ENDPOINT=your_endpoint_id

# OpenAI API (for GPT-4 Vision blueprint analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_key_here

# Ollama Configuration (for self-hosted AI - optional)
OLLAMA_API_URL=http://localhost:11434
