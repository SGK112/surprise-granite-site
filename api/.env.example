# ===========================================
# SURPRISE GRANITE API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real keys to version control!
# ===========================================

# Stripe API Keys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Server Configuration
PORT=3001
NODE_ENV=production

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password_here
ADMIN_EMAIL=admin@example.com

# Replicate API (for AI Visualizer)
REPLICATE_API_TOKEN=r8_your_replicate_token_here

# RunPod API (backup AI service)
RUNPOD_API_KEY=rpa_your_runpod_key_here
RUNPOD_FLUX_ENDPOINT=your_endpoint_id

# OpenAI API (for GPT-4 Vision blueprint analysis)
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Ollama Configuration (for self-hosted AI - local dev only)
OLLAMA_API_URL=http://localhost:11434

# Supabase (Marketplace Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis (for scalable rate limiting)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
